<h2>Editing Client Info For <%= @client.name %></h2>

<%= error_messages_for 'client' %>
<% form_for :client, @client, :url => { :action => 'update' } do |f| %>
	<p>
		<label for="client[name]">Name</label><br />
		<%= f.text_field :name %>
	</p>
	
	<p>
		<label for="client[email]">Email</label><br />
		<%= f.text_field :email %>
	</p>
	
	<p>
		<label for="client[url]">URL</label><br />
		<%= f.text_field :url %>
	</p>
	
	<p>
		<label for="client[phone]">Phone</label><br />
		<%= f.text_field :phone %>
	</p>
	
	<p>
		<label for="client[fax]">Fax</label><br />
		<%= f.text_field :fax %>
	</p>
	
	<p>
		<label for="client[address]">Address</label><br />
		<%= f.text_field :address %>
	</p>
	
	<%= submit_button "Create" %>
<% end %>